<section class="page">
    <form action="/search" class="search">
        <input type="search" name="q">
        {% comment %} <button type="submit"><img src="{{ "search-black-outline.svg" | asset_url }}"></button> {% endcomment %}
    </form>

    <ul class="menu-links">
        {% comment %} {% for link in linklists.main-menu.links -%}
        <li>{{ link.title | upcase | link_to: link.url }}</li>
        {%- endfor %} {% endcomment %}
        <li><a href="/">HOME</a></li>
        <li><a href="/collections/gifts-&-giftsets">GIFTS & GIFTSETS</a></li>
        <li><a href="/collections/whats-new">WHAT'S NEW</a></li>
        <li><a href="/collections/womens-fashion">WOMEN'S FASHION</a></li>
        <li><a href="/collections/mens-fashion">MEN'S FASHION</a></li>
        <li><a href="/collections/outerwear">OUTERWEAR</a></li>
        <li><a href="/collections/accessories">ACCESSORIES</a></li>
    </ul>

    <ul class="account-links">
        <li>Log In</li>
        <li>Create Account</li>
    </ul>

    {% section 'footer' %}

</section>

<style>
    .page {
        {% comment %} box-sizing: border-box !import; {% endcomment %}
        margin-top: 100px;
    }

    .menu-links,
    .account-links {
        display: flex;
        flex-direction: column;
        row-gap: 25px;
        {% comment %} padding: 0 25px 0; {% endcomment %}
        {% comment %} margin-left: 25px !important; {% endcomment %}
        list-style: none;
        padding: 0;
        margin: 0
        
    }

    .account-links {
        margin-top: 100px
    }

    .menu-links li,
    .account-links li {
        font-size: 15px;
        font-weight: 500;
        color: #0c0c0c;
        padding: 0 25px 0;
        box-sizing: border-box;

    }

    .search {
        height: 37.5px;
        width: 100%;
        display: flex;
        flex-direction: row-reverse;
        margin: 10px 0 25px;

    }

    .search input {
        width: 100%;
        height: 37.5px;
        border: none;
        background: #181818;
        color: #fff;
        font-size: 12.5px;
        display: block;
        font: 'Lato', sans-serif;
        padding: 0 10px;
        box-sizing: border-box !important;
        border-radius: 0
    }

    .search input::placeholder {
        color: #fff;
        font-size: 12.5px;
        font: "Lato", sans-serif
    }

    .search input:focus {
        
    }

    .search {
        padding: 0 25px 0;
        box-sizing: border-box
    }
</style>