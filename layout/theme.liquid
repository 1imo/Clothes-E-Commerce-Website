<style>
    @import url('https://fonts.googleapis.com/css2?family=Hedvig+Letters+Serif:opsz@12..24&family=Lato:wght@100;300;400;500;600;700&display=swap');

    body {
        margin: 0;
        padding: 0;
        font-family: 'Lato', sans-serif;
        line-height: 100%;
        color: #fff;
        background: #0c0c0c !important;
    }

    a,
    h1,
    h2,
    h3,
    h4,
    h5,
    h6,
    p {
        padding: 0;
        margin: 0;
        text-decoration: none;
        color: #fff !important
    }

    a,
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        line-height: 100%;
        color: #fff !important
    }

    a:visited,
    a {
        color: #fff
    }

    @media only screen and (max-width: 900px) {
        body {
            width: 100vw !important;
            box-sizing: border-box !important;
        }
    }

    /* width */
    ::-webkit-scrollbar {
        width: 10px;
    }

      /* Track */
      ::-webkit-scrollbar-track {
        background: #E7E7E7;
        {% comment %} opacity: 10% {% endcomment %}
      }

      /* Handle */
      ::-webkit-scrollbar-thumb {
        background: #D1D1D1;
        {% comment %} opacity: 10% {% endcomment %}
      }

      /* Handle on hover */
      ::-webkit-scrollbar-thumb:hover {
        background: #BEBEBE;
        {% comment %} opacity: 10% {% endcomment %}
      }
</style>