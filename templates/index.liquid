<style>
    .video {
        width: 100vw !important;
        height: 100vh !important;
        object-fit: cover !important;
        overflow-y: hidden;
        overflow-x: hidden !important;

    }

    body {
        height: calc(100vh - 75px);
        overflow-y: hidden !important;
        overflow-x: hidden !important;
    }

    .cta {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 33.3vw;
    }

    .cta h2 {
        font-family: 'Hedvig Letters Serif', serif;
        font-size: 20px;
        color: #fff;
        margin-bottom: 25px;
        text-align: center;
        font-weight: 300
    }

    .cta h3 {
        font-family: 'Lato', sans-serif;
        font-size: 15px;
        color: #fff;
        margin-bottom: 100px;
        text-align: center;
        font-weight: 300
    }

    .cta div {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
        column-gap: 25px;
        row-gap: 10px;
        width: 100%;
    }

    .cta div div {
        width: calc((33.3vw - 125px) / 4);
        {% comment %} min-width: 125px; {% endcomment %}
        height: 37.5px;
        background: rgba(12, 12, 12, 0.5);
        box-shadow: 0px 5px 50px 0px rgba(255,255,255,0.01);
        color: #fff
    }



    .cta div div a {
        color: #fff;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12.5px !important;
        text-align: center;
        padding: 0 !important;
        margin: 0 !important
    }

    @media only screen and (max-width: 700px) {
        .cta {
            width: calc(100vw - 50px)
        }

        .cta div div {
            width: calc((100vw - 75px) / 2);
        }

    }

    @media only screen and (max-width: 1400px) {
        .cta {
            width: calc(100vw - 50px)
        }

        .cta div div {
            width: calc((100vw - 75px) / 3);
        }

    }

    

</style>