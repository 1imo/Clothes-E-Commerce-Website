<header style="background-color: #fff">
    <a class="menu--btn left" href="/pages/menu"><img src="{{ "menu--closed.svg" | asset_url }}"></a>
    <h1><a href="/">TSS</a></h1>

    <div class="desktop--navigation">
        <div>
            <form action="/search">
                <img src="{{ "search-black-outline.svg" | asset_url }}">
                <input type="search" name="q">
                {% comment %} <button type="submit">Search</button> {% endcomment %}
            </form>
            <a href="/cart" ><img src="{{ "heart-black-outline.svg" | asset_url }}"></a>
            <a href="/cart" ><img src="{{ "bag-white-outline.svg" | asset_url }}"></a>
            <img src="{{ "user-black-outline.svg" | asset_url }}">
        </div>
        <ul class="links">
            {% comment %} {% for link in linklists.main-menu.links -%}
            {% comment %} <li>{{ link.title | upcase | link_to: link.url }}</li> {% endcomment %}
            {%- endfor %} {% endcomment %}
            <li><a href="/">HOME</a></li>
            <li><a href="/collections/gifts-&-giftsets">GIFTS & GIFTSETS</a></li>
            <li><a href="/collections/whats-new">WHAT'S NEW</a></li>
            <li><a href="/collections/womens-fashion">WOMEN'S FASHION</a></li>
            <li><a href="/collections/mens-fashion">MEN'S FASHION</a></li>
            <li><a href="/collections/outerwear">OUTERWEAR</a></li>
            <li><a href="/collections/accessories">ACCESSORIES</a></li>
            
            {{ link.title | upcase | link_to: link.url }}
        </ul>
    </div>

    <div class="right">
        {% comment %} <a href="/liked"><img src="{{ "heart-black-outline.svg" | asset_url }}"></a> {% endcomment %}
        <a href="/cart"><img src="{{ "bag-white-outline.svg" | asset_url }}"></a>
    </div>

    {% comment %} {% if settings.show_search == true %}
        
    {% endif %} {% endcomment %}
</header>


<style>
    {% comment %} @import url('https://fonts.googleapis.com/css2?family=Hedvig+Letters+Serif:opsz@12..24&family=Lato:wght@100;300;400;500;600;700&display=swap'); {% endcomment %}

    h1 {
        font-family: 'Hedvig Letters Serif', serif;
        font-size: 50px;
        padding: 0 !important;
        margin: 0 !important;
        margin-top: 5px !important;

    }

    h1 a {
        padding: 0 !important;
        margin: 0px !important;
        color: #0c0c0c;
        {% comment %} transform: translateY(5px) {% endcomment %}
    }

    header {
        position: fixed;
        top: 0%;
        width: 100vw;
        box-sizing: border-box;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px 25px 25px;
        z-index: 10 !important;
        background: #0c0c0c !important
    }

    .links {
        text-decoration: none;
        display: flex;
        flex-direction: row;
        {% comment %} justify-content: flex-end; {% endcomment %}
        {% comment %} column-gap: 25px; {% endcomment %}
        list-style: none;
        margin: 0 !important;
        padding: 0 !important;
    }

    .links li {
        padding:  0 !important;
        margin: 0 !important;
        margin-left: 25px !important;
        {% comment %} display: block {% endcomment %}
        {% comment %} height: 10px {% endcomment %}
    }

    .links li a {
        text-decoration: none;
        color: #0c0c0c;
        font-size: 10px;
        font-family: 'Lato';
        font-weight: 500;
        margin: 0;
        padding: 0;
        display: block;
        {% comment %} line-height: 1.5; {% endcomment %}
        height: 10px;

    }

    .desktop--navigation {
        display: flex;
        flex-direction: column;
        row-gap: 10px
    }

    .desktop--navigation div {
        display: flex;
        flex-direction: row;
        column-gap: 25px;
        align-items: center;
        height: 30px;
        justify-content: flex-end
    }

    .desktop--navigation div img,
    .desktop--navigation div form img {
        width: 20px;
        height: 20px;
    }

    .desktop--navigation div form {
        width: 250px;
        box-sizing: border-box;
        height: 30px;
        padding: 5px;
        background-color: #181818;
        display: flex;
        align-items: center;
        margin: 0;
        {% comment %} margin-top: -5px; {% endcomment %}
    }

    .desktop--navigation div form input,
    .desktop--navigation div form input:focus {
        background-color: #181818;
        border: none;
        outline: none;
        font-family: 'Lato';
        padding: 5px;
        width: 100%;
        color: #fff;
    }


    
        
    @media only screen and (min-width: 900px) {
        .left,
        .right {
            display: none
        }

    }
    @media only screen and (max-width: 900px) {


        .desktop--navigation {
            display: none
        }

        header {
            padding: 25px;
        }

        
        header h1 {
            position: absolute !important;
            {% comment %} top: 50%; {% endcomment %}
            left: 50%;
            transform: translateX(-50%);
            font-size: 25px
            {% comment %} transform: translate(50%, 50%); {% endcomment %}
        }

        .right {
            display: flex;
            flex-direction: row;
            column-gap: 25px
        }

        .right img {
            height: 25px;
            width: 25px
        }

    }
    
    

</style>

<script>
    const cart = document.querySelector('.cart');
    cart.addEventListener('click', () => {
        window.location("/cart")
    })
</script>

{% schema %}
{
    "name": "Header",
    "settings": [
        {
            "type": "checkbox",
            "id": "show_search",
            "label": "Show search form?"
        },
        {
            "type": "color",
            "id": "bg",
            "label": "Background Colour"
        }
    ]
}
{% endschema %}